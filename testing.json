{
  "vconcat": [
    {
      "width": 800,
      "height": 500,
      "layer": [
        {
          "params": [
            {
              "name": "highlight",
              "select": {"type": "point", "on": "mouseover"}
            },
            {
              "name": "brush_select",
              "select": {"type": "interval", "resolve": "intersect"}
            }
          ],
          "data": {
            "url": "data/us-10m.json",
            "format": {"type": "topojson", "feature": "states"}
          },
          "transform": [
            {
              "lookup": "id",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/dandex200/Information_Visualisation_Project/main/us_avg_tuition_2.csv"
                },
                "key": "id",
                "fields": ["State", "Average"]
              }
            }
          ],
          "mark": "geoshape",
          "encoding": {
            "color": {
              "field": "Average",
              "type": "quantitative",
              "scale": {"scheme": "blues"},
              "condition": {
                "param": "highlight",
                "empty": false,
                "value": "red"
              }
            },
            "tooltip": [
              {"field": "State", "type": "nominal", "title": "State"},
              {"field": "Average", "type": "nominal"}
            ]
          }
        },
        {
          "data": {
            "url": "data/us-10m.json",
            "format": {"type": "topojson", "feature": "states"}
          },
          "mark": {
            "type": "geoshape",
            "fill": null,
            "stroke": "black",
            "strokeWidth": 0.5
          }
        }
      ]
    },
    {
      "mark": "tick",
      "data": {
        "url": "https://raw.githubusercontent.com/dandex200/Information_Visualisation_Project/main/us_avg_tuition_2.csv"
      },
      "encoding": {
        "x": {
          "field": "Average",
          "type": "quantitative",
          "title": "Average Tuition Cost",
          "scale": {"zero": false, "type": "linear", "domain": [4000, 13500]}
        },
        "color": {
          "condition": {
            "param": "brush_select",
            "field": "State",
            "type": "nominal",
            "scale": {"scheme": "reds"},
            "legend": null
          },
          "value": "lightgrey"
        }
      }
    }
  ],
  "config": {
    "padding": {"top": 20, "left": 20, "right": 20, "bottom": 20},
    "legend": {
      "orient": "bottom",
      "direction": "horizontal",
      "legendX": 610,
      "legendY": 570,
      "gradientLength": 300,
      "labelFont": "Segoe UI",
      "labelFontSize": 10,
      "labelColor": "black",
      "titleFont": "Segoe UI",
      "titleFontSize": 16,
      "titleFontWeight": "lighter",
      "titleColor": "black",
      "titleLimit": 300
    },
    "projection": {"type": "albersUsa"},
    "title": {
      "anchor": "start",
      "color": "black",
      "subtitlePadding": 30,
      "subtitleFont": "Calibri",
      "subtitleFontSize": 15,
      "subtitleFontWeight": "lighter",
      "subtitleColor": "black"
    }
  }
}