{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "USA Average College Tuition",
    "fontSize": 35,
    "anchor": "middle",
    "dx": 0
  },
  "data": {
    "url": "https://raw.githubusercontent.com/dandex200/Information_Visualisation_Project/main/us_avg_tuition_3.csv",
    "format": {"type": "csv"}
  },
  "hconcat": [
    {
      "vconcat": [
        {
          "width": 600,
          "height": 400,
          "selection": {
            "year_select": {
              "type": "multi",
              "fields": ["Year"],
              "resolve": "global"
            }
          },
          "layer": [
            {
              "params": [
                {
                  "name": "highlight",
                  "select": {"type": "point", "on": "mouseover"}
                }
              ],
              "data": {
                "url": "data/us-10m.json",
                "format": {"type": "topojson", "feature": "states"}
              },
              "transform": [
                {
                  "lookup": "id",
                  "from": {
                    "data": {
                      "url": "https://raw.githubusercontent.com/dandex200/Information_Visualisation_Project/main/us_avg_tuition_3.csv"
                    },
                    "key": "id",
                    "fields": ["State", "Average"]
                  }
                },
                {"filter": {"selection": "year_select"}}
              ],
              "mark": "geoshape",
              "encoding": {
                "color": {
                  "field": "Average",
                  "type": "quantitative",
                  "scale": {"scheme": "blues"},
                  "condition": {
                    "param": "highlight",
                    "empty": false,
                    "value": "red"
                  }
                },
                "opacity": {
                  "condition": {"selection": "brush_select", "value": 1},
                  "value": 0
                },
                "tooltip": [
                  {"field": "State", "type": "nominal", "title": "State"},
                  {"field": "Average", "type": "nominal"}
                ]
              }
            },
            {
              "data": {
                "url": "data/us-10m.json",
                "format": {"type": "topojson", "feature": "states"}
              },
              "mark": {
                "type": "geoshape",
                "fill": null,
                "stroke": "black",
                "strokeWidth": 0.5
              }
            }
          ]
        },
        {
          "mark": "tick",
          "width": 600,
          "selection": {
            "brush_select": {"type": "interval", "resolve": "intersect"}
          },
          "data": {
            "url": "https://raw.githubusercontent.com/dandex200/Information_Visualisation_Project/main/us_avg_tuition_3.csv"
          },
          "encoding": {
            "x": {
              "field": "Average",
              "type": "quantitative",
              "title": "Average Tuition Cost",
              "scale": {
                "zero": false,
                "type": "linear",
                "domain": [4000, 13500]
              }
            },
            "color": {
              "condition": {
                "selection": "brush_select",
                "field": "State",
                "type": "nominal",
                "scale": {"scheme": "reds"},
                "legend": null
              },
              "value": "lightgrey"
            }
          }
        }
      ]
    },
    {
      "width": 200,
      "height": 500,
      "transform": [
        {
          "fold": [
            "2004",
            "2005",
            "2006",
            "2007",
            "2008",
            "2009",
            "2010",
            "2011",
            "2012",
            "2013",
            "2014",
            "2015"
          ],
          "as": ["Year", "Tuition"]
        },
        {"groupby": ["Year"], "value": "Tuition"}
      ],
      "mark": "bar",
      "selection": {
        "year_select": {
          "type": "single",
          "fields": ["Year"],
          "resolve": "global"
        }
      },
      "encoding": {
        "y": {"field": "Year", "type": "nominal", "sort": "descending"},
        "x": {"field": "Tuition", "type": "quantitative", "aggregate": "mean"},
        "opacity": {
          "condition": {"selection": "year_select", "value": 1},
          "value": 0.4
        }
      }
    }
  ],
  "config": {
    "padding": {"top": 20, "left": 20, "right": 20, "bottom": 20},
    "legend": {
      "orient": "bottom",
      "direction": "horizontal",
      "legendX": 610,
      "legendY": 570,
      "gradientLength": 300,
      "labelFont": "Segoe UI",
      "labelFontSize": 10,
      "labelColor": "black",
      "titleFont": "Segoe UI",
      "titleFontSize": 16,
      "titleFontWeight": "lighter",
      "titleColor": "black",
      "titleLimit": 300
    },
    "projection": {"type": "albersUsa"},
    "title": {
      "anchor": "start",
      "color": "black",
      "subtitlePadding": 30,
      "subtitleFont": "Calibri",
      "subtitleFontSize": 15,
      "subtitleFontWeight": "lighter",
      "subtitleColor": "black"
    }
  }
}